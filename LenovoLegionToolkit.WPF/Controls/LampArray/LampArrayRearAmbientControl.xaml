<UserControl
    x:Class="LenovoLegionToolkit.WPF.Controls.LampArray.LampArrayRearAmbientControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.WPF.Controls.LampArray"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Path">
            <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource AncestorType=controls:LampArrayZoneControl}, Path=LampBrush}" />
        </Style>
        <Style x:Key="VentKey" TargetType="controls:LampArrayZoneControl">
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="ButtonBackground" Value="{x:Null}" />
            <Setter Property="ShowBacklight" Value="False" />
            <Setter Property="Foreground" Value="{DynamicResource ControlFillColorDefaultBrush}" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="4,0" />
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="20" />
        </Style>
        <Geometry x:Key="ZoneRect">M0,0 H100 V20 H0 Z</Geometry>
    </UserControl.Resources>
    <Viewbox Stretch="Uniform">
        <UniformGrid
            x:Name="_uniformGrid"
            Width="1127"
            Height="60"
            Margin="10"
            Columns="10"
            Rows="1">
            <controls:LampArrayZoneControl
                Indices="243-248"
                Style="{StaticResource VentKey}"
                ToolTip="Zone 1">
                <controls:LampArrayZoneControl.Tag>
                    <Path Data="{StaticResource ZoneRect}" Stretch="Fill" />
                </controls:LampArrayZoneControl.Tag>
            </controls:LampArrayZoneControl>
            <controls:LampArrayZoneControl
                Indices="249-254"
                Style="{StaticResource VentKey}"
                ToolTip="Zone 2">
                <controls:LampArrayZoneControl.Tag>
                    <Path Data="{StaticResource ZoneRect}" Stretch="Fill" />
                </controls:LampArrayZoneControl.Tag>
            </controls:LampArrayZoneControl>
            <controls:LampArrayZoneControl
                Indices="255-260"
                Style="{StaticResource VentKey}"
                ToolTip="Zone 3">
                <controls:LampArrayZoneControl.Tag>
                    <Path Data="{StaticResource ZoneRect}" Stretch="Fill" />
                </controls:LampArrayZoneControl.Tag>
            </controls:LampArrayZoneControl>
            <controls:LampArrayZoneControl
                Indices="261-265"
                Style="{StaticResource VentKey}"
                ToolTip="Zone 4">
                <controls:LampArrayZoneControl.Tag>
                    <Path Data="{StaticResource ZoneRect}" Stretch="Fill" />
                </controls:LampArrayZoneControl.Tag>
            </controls:LampArrayZoneControl>
            <controls:LampArrayZoneControl
                Indices="266-270"
                Style="{StaticResource VentKey}"
                ToolTip="Zone 5">
                <controls:LampArrayZoneControl.Tag>
                    <Path Data="{StaticResource ZoneRect}" Stretch="Fill" />
                </controls:LampArrayZoneControl.Tag>
            </controls:LampArrayZoneControl>
            <controls:LampArrayZoneControl
                Indices="271-275"
                Style="{StaticResource VentKey}"
                ToolTip="Zone 6">
                <controls:LampArrayZoneControl.Tag>
                    <Path Data="{StaticResource ZoneRect}" Stretch="Fill" />
                </controls:LampArrayZoneControl.Tag>
            </controls:LampArrayZoneControl>
            <controls:LampArrayZoneControl
                Indices="276-280"
                Style="{StaticResource VentKey}"
                ToolTip="Zone 7">
                <controls:LampArrayZoneControl.Tag>
                    <Path Data="{StaticResource ZoneRect}" Stretch="Fill" />
                </controls:LampArrayZoneControl.Tag>
            </controls:LampArrayZoneControl>
            <controls:LampArrayZoneControl
                Indices="281-286"
                Style="{StaticResource VentKey}"
                ToolTip="Zone 8">
                <controls:LampArrayZoneControl.Tag>
                    <Path Data="{StaticResource ZoneRect}" Stretch="Fill" />
                </controls:LampArrayZoneControl.Tag>
            </controls:LampArrayZoneControl>
            <controls:LampArrayZoneControl
                Indices="287-292"
                Style="{StaticResource VentKey}"
                ToolTip="Zone 9">
                <controls:LampArrayZoneControl.Tag>
                    <Path Data="{StaticResource ZoneRect}" Stretch="Fill" />
                </controls:LampArrayZoneControl.Tag>
            </controls:LampArrayZoneControl>
            <controls:LampArrayZoneControl
                Indices="293-298"
                Style="{StaticResource VentKey}"
                ToolTip="Zone 10">
                <controls:LampArrayZoneControl.Tag>
                    <Path Data="{StaticResource ZoneRect}" Stretch="Fill" />
                </controls:LampArrayZoneControl.Tag>
            </controls:LampArrayZoneControl>
        </UniformGrid>
    </Viewbox>
</UserControl>